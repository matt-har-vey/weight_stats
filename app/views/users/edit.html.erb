<div class="row span12">
  <h3>Limit Date Ranges</h3>
  <%= form_for(@user) do |f| %>
    <fieldset>
      <div class="form-group">
        <%= f.label :weights_start, 'Start:' %>
        <%= f.text_field :weights_start %>
      </div>
      <div class="form-group">
        <%= f.label :weights_end, 'End:' %>
        <%= f.text_field :weights_end %>
      </div>
      <%= f.submit 'Update' %>
    </fieldset>
  <% end %>
</div>
